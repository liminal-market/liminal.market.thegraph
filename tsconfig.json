{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "types", "node_modules/@graphprotocol/graph-ts/*"],
    "paths": {
      "*" : ["@types/*", "node_modules/@graphprotocol/graph-ts/*"]
    },

  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}