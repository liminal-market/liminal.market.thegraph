{
  "include": [
    "src",
    "__tests__",
    "node_modules/assemblyscript/std/assembly/index.d.ts"
  ],
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "*": [
        "@types/*"
      ]
    }
  }
}
